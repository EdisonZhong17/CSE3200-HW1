<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/yellowRobot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:srcCompat="@drawable/king_of_detroit_robot_yellow_large" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/redRobot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/king_of_detroit_robot_red_large" />

        <ImageView
            android:id="@+id/whiteRobot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/king_of_detroit_robot_white_large" />

    </LinearLayout>

    <View
        android:id="@+id/verticalDivider"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/clockwiseArrow"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/rot_clockwise" />

        <View
            android:id="@+id/horizontalDivider"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@color/white" />

        <ImageView
            android:id="@+id/antiClockwiseArrow"
            android:layout_width="52dp"
            android:layout_height="52dp"
            app:srcCompat="@drawable/rot_counter" />

    </LinearLayout>

</LinearLayout>
